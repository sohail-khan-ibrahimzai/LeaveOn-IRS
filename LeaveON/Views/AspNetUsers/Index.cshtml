@model IEnumerable<LeaveON.Models.AspNetUser2>

@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h3 class="card-title">
            Users List
            @Html.ActionLink("Add User", "Register", "Account", new object { }, new { @class = "btn btn-warning" })
          </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <table id="example" class="table table-bordered table-hover">
            <thead>
              <tr>

                <th>
                  Email
                </th>
                <th>
                  Type
                </th>

                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {

                <tr>

                  <td>
                    @Html.DisplayFor(modelItem => item.Email)
                  </td>
                  <td>

                    @Html.DisplayFor(modelItem => item.Type)
                  </td>

                  <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.Id }, new { @class = "btn btn-info" }) @*|*@
                    @Html.ActionLink("Reset Pasword", "ResetPassword", new { code = item.Id }, new { @class = "btn btn-success" }) @*|*@
                    @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                  </td>
                </tr>
              }
            </tbody>
            <tfoot>
              <tr>

                <th>
                  Email
                </th>
                <th>
                  Type
                </th>

                <th></th>
              </tr>
            </tfoot>
          </table>
        </div>
        <!-- /.card-body -->
      </div>

    </div>
    <!-- /.col -->
  </div>
  <!-- /.row -->
</section>


