@model LeaveON.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "";
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
}




<div class="register-box" >
  <div class="register-logo">
    <h2>@ViewBag.Title.</h2>
  </div>

  <div class="card" >
    <div class="card-body register-card-body" >
      <p class="login-box-msg">Create a new account</p>

      @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
      {
        @Html.AntiForgeryToken()
         
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
          @Html.LabelFor(m => m.Email, new { @class = " " })
          <div class="input-group mb-3">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          </div>
        <div class="form-group">
          @Html.LabelFor(m => m.Hometown, new { @class = " " })
           
            @Html.TextBoxFor(m => m.Hometown, new { @class = "form-control" })
           
        </div>
        <div class="form-group">
          @Html.LabelFor(m => m.Password, new { @class = " " })
         
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
           
        </div>
        <div class="form-group">
          @Html.LabelFor(m => m.ConfirmPassword, new { @class = " " })
           
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
          
        </div>
        <div class="form-group">
          @Html.Label("DepartmentId", htmlAttributes: new { @class = " " })
           
            @Html.DropDownList("DepartmentId", new SelectList(ViewBag.Departments, "Id", "Name"), new { @class = "form-control" })

          
        </div>
        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary btn-block" value="Register" />
          </div>
        </div>

      }

      </div>
    </div>
  
  </div>

